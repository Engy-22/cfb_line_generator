<br/>
<% if current_user %>
<table id="TeamTable" class="tablesorter">
<thead>
<tr>
  <th> Team </th>
  <th> Conference </th>
  <th> Profile </th>
</tr>
</thead>
<tbody>
  <% @teams.each do |team| %>
  <tr>
    <td> <%= team.name %> </td>
    <td> <%= team.conference %> </td>
    <td> <% team.profiles.each do |profile| %>
            <% if profile.user_id == current_user.id %>
              <%= link_to "Profile", edit_team_profile_path(profile.team, profile) %>
            <% end %>
        <% end %> </td>
    </tr>
  <% end %>
</tbody>
</table>
<% else %>
<h2>  Sign up for an easy way to enter your power rankings and have point spreads generated for every 2016 College Football Game! </h2>
<% end %>
